{
    "version": 2,
    "builds": [
      {
        "src": "back/app.js",
        "use": "@vercel/node"
      },
      {
        "src": "front/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "front/dist" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "back/app.js" },
      { "src": "/(.*)", "dest": "front/dist/$1" }
    ]
  }
  